<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">

<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
	xmlns:g='urn:import:com.google.gwt.user.client.ui' ui:generateFormat='com.google.gwt.i18n.rebind.format.PropertiesFormat'
	ui:generateKeys='com.google.gwt.i18n.rebind.keygen.MD5KeyGenerator'
	ui:generateLocales='default'>

	<ui:with field="resources"
		type="org.eumetsat.usd.gcp.client.resources.Resources" />

	<g:PopupPanel styleName="{resources.style.popup}" glassEnabled="true" animationEnabled="true">
		<g:VerticalPanel horizontalAlignment="ALIGN_CENTER">
			<g:Label styleName="{resources.style.popupLabel}" ui:field="errorMessageLabel" />
			<g:HTMLPanel>
			     <hr/>
			</g:HTMLPanel>
			<g:Label styleName="{resources.style.errorDetailsLabel}" ui:field="errorDetailsLabel" />
			<g:Button styleName="{resources.style.button}" ui:field="okButton" text="Ok" />
		</g:VerticalPanel>
	</g:PopupPanel>
</ui:UiBinder>
